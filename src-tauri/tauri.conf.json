{
  "productName": "Dither's Boyfriend",
  "version": "0.1.0",
  "identifier": "com.dithers.boyfriend",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "",
    "category": "Graphics",
    "shortDescription": "Professional image and video dithering",
    "longDescription": "A comprehensive dithering application supporting multiple algorithms for images and videos"
  },
  "app": {
    "windows": [
      {
        "title": "Dither's Boyfriend",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "dialog": {
      "all": true,
      "open": true,
      "save": true
    },
    "fs": {
      "all": true,
      "readFile": true,
      "writeFile": true,
      "scope": ["**"]
    }
  }
}
